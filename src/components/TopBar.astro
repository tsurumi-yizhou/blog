---
import { Icon } from "astro-icon/components";

const pages = [
    { title: "Collections", link: "/collections" },
    { title: "Friends", link: "/friends" },
    { title: "About", link: "/about" },
];
---

<nav class="navbar w-full">
    <div class="flex items-center justify-between w-full">
        <div class="block lg:ml-16">
            <a class="btn btn-ghost text-xl font-serif" href="/">空想赋格</a>
        </div>

        <div class="hidden md:flex">
            {
                pages.map((page) => (
                    <a
                        class="btn btn-ghost text-md font-serif"
                        href={page.link}
                    >
                        {page.title}
                    </a>
                ))
            }
        </div>

        <div class="hidden md:flex md:mr-32" />

        <div class="md:hidden dropdown dropdown-end">
            <button tabindex="0" role="button" class="btn btn-ghost">
                <Icon name="fa-solid:bars" size={16} />
            </button>
            <ul
                tabindex="0"
                class="dropdown-content menu shadow bg-base-100 rounded-box"
            >
                {
                    pages.map((page) => (
                        <li>
                            <a href={page.link}>{page.title}</a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</nav>
