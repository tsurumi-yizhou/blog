---
import App from "../App.astro";
import PageHeader from "../components/PageHeader.astro";
import CoverCard from "../components/CoverCard.astro";
import type {MarkdownInstance} from "astro";

interface Frontmatter {
    cover: string;
    description: string;
}
type Record = MarkdownInstance<Frontmatter>
const data = import.meta.glob<Record>("./collections/*", {eager: true});
const collections = Object.values(data)
---
<App title="Collections">
    <PageHeader title="Collections"/>
    <main class="grid gap-x-6 gap-y-12 grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        {collections.map(collection => (
                <CoverCard cover={collection.frontmatter.cover} description={collection.frontmatter.description}
                           name={collection.url!!.split("/").pop()} link={collection.url!!}/>
        ))}
    </main>
</App>